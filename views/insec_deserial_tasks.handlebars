
<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1>Todo List</h1>
    <small>This form posts to a json endpoint, and expects json input</small>
    
    <div class="mx-auto text-left" style="width: 30rem;">
    {{#if flash}}
        <div class='alert {{flash.class}} text-center' role='alert'>
        {{flash.message}}
        </div>
    {{/if}}
    {{#each tasks}}
        <div class="task">
            <input class="big-checkbox float-left" type="checkbox" data-task-id={{this.task_id}} 
                {{#if this.task_complete}}checked{{/if}}>
                
            <div class="card">  
                <button type="button" class="close" data-task-id={{this.task_id}} data-toggle="tooltip" data-placement="right" title="Delete">
                    <span aria-hidden="true">Ã—</span>
                </button>            
                <div class="card-body">
                    {{this.task_description}}
                </div>
            </div>
        </div>
    {{/each}}

    <form class="form-inline mt-3" action={{endpoint}} method="post">
      <textarea name="desc" class="form-control form-control-lg mb-2 mr-3 mx-auto" id="task-desc" placeholder="Task JSON: &#10; {'desc': 'task description'} " rows=5></textarea>
      <div>
      <button type="submit" class="btn btn-lg btn-success float-right">POST</button>
      </div>
    </form>

    </div>
</div>
